<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:windowTranslucentStatus">true</item>-->
    </style>

    <style name="RegisterTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:windowTranslucentStatus">false</item>-->
    </style>

    <style name="LabelStyle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="CustomStyleButton" parent="@android:style/Widget.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#00b4ff</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
        <!--<item  name="android:background">@drawable/custom_button</item>-->
        <item name="android:padding">10dip</item>
    </style>

    <style name="DialogTheme" parent="android:Theme" >
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

</resources>
